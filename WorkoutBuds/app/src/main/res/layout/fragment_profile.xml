<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment">

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvProfileUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginStart="25dp"
        android:layout_toRightOf="@+id/ivProfileImage"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="username" />

    <TextView
        android:id="@+id/tvProfileSchool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_marginStart="25dp"
        android:layout_toRightOf="@+id/ivProfileImage"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        tools:text="school" />

    <TextView
        android:id="@+id/tvProfileLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="115dp"
        android:layout_marginStart="25dp"
        android:layout_toRightOf="@+id/ivProfileImage"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        tools:text="class" />

    <TextView
        android:id="@+id/tvProfileMajor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="155dp"
        android:layout_marginStart="25dp"
        android:layout_toRightOf="@+id/ivProfileImage"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        tools:text="major" />

    <TextView
        android:id="@+id/tvProfileSquatsTotal"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivProfileImage"
        android:layout_marginTop="60dp"
        android:layout_marginStart="80dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        tools:text="squats: total" />

    <TextView
        android:id="@+id/tvProfilePushUpTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivProfileImage"
        android:layout_marginTop="60dp"
        android:layout_marginStart="30dp"
        android:layout_toRightOf="@+id/tvProfileSquatsTotal"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        tools:text="PushUps: total" />


</RelativeLayout>