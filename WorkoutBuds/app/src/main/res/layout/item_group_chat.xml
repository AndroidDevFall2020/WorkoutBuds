<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <ImageView
        android:id="@+id/ivGroupImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvGroupName"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/ivGroupImage"
        android:fontFamily="sans-serif-black"
        android:lines="1"
        android:textSize="25sp"
        tools:text="GC Name" />

    <TextView
        android:id="@+id/tvMembersCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:lines="1"
        android:textAlignment="viewEnd"
        android:layout_toEndOf="@+id/tvGroupName"
        tools:text="12 members" />

    <TextView
        android:id="@+id/tvGroupDescription"
        android:layout_width="234dp"
        android:layout_height="79dp"
        android:layout_below="@+id/tvGroupName"
        android:layout_marginStart="21dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/ivGroupImage"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        android:lines="@android:integer/config_longAnimTime"
        tools:text="- No Description" />

</RelativeLayout>